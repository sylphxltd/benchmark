{
  "name": "state-management-benchmark",
  "version": "1.0.0",
  "description": "Professional state management benchmark suite using Vitest Bench",
  "type": "module",
  "scripts": {
    "benchmark": "vitest bench --run --outputJson=results/latest.json && node ../../scripts/save-dated-result.cjs results && node ../../scripts/generate-main-readme.cjs .",
    "benchmark:read": "node ../../scripts/run-group-benchmark.cjs read .",
    "benchmark:write": "node ../../scripts/run-group-benchmark.cjs write .",
    "benchmark:creation": "node ../../scripts/run-group-benchmark.cjs creation .",
    "benchmark:async": "node ../../scripts/run-group-benchmark.cjs async .",
    "benchmark:complexity": "node ../../scripts/run-group-benchmark.cjs complexity .",
    "benchmark:memory": "node ../../scripts/run-group-benchmark.cjs memory .",
    "benchmark:all-groups": "npm run benchmark:read && npm run benchmark:write && npm run benchmark:creation && npm run benchmark:async && npm run benchmark:complexity && npm run benchmark:memory",
    "clean": "rm -rf results && rm -rf groups/*/results.json && mkdir -p results"
  },
  "dependencies": {
    "@preact/signals": "2.4.0",
    "@reduxjs/toolkit": "^2.10.1",
    "@sylphx/zen": "^1.2.1",
    "jotai": "^2.15.1",
    "mobx": "^6.15.0",
    "recoil": "^0.7.7",
    "solid-js": "^1.9.10",
    "valtio": "2.2.0",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "tsx": "^4.20.6",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
